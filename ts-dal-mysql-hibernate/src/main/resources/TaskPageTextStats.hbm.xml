<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>
<hibernate-mapping>
    <class name="com.github.mperever.common.dal.TaskPageTextStats" table="PageText">
        <meta attribute="class-description">
            This class contains page text and word statistic
        </meta>

        <id name="taskId" column="taskId" type="int"/>

        <property name="pageText" type="string">
            <column name="text" length="20000" not-null="true"/>
        </property>

        <map name="wordStats" table="WordStats" cascade="all">
            <key column="taskId"/>
            <index column="word" type="string"/>
            <element column="count" type="long"/>
        </map>
    </class>
</hibernate-mapping>