<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>
<hibernate-mapping>
    <class name="com.github.mperever.common.dto.UrlTask" table="Tasks">
        <meta attribute="class-description">
            This class contains the url task detail for feature processing
        </meta>

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>

        <property name="parentId" column="parentId" type="int" access="field"/>

        <property name="url" type="string" access="field">
            <column name="url" unique="true" length="2000" not-null="true"/>
        </property>

        <property name="depth" type="int" access="field">
            <column name="depth" not-null="true"/>
        </property>

        <property name="external" type="boolean" access="field">
            <column name="external" not-null="true"/>
        </property>

        <property name="startProcessTime" column="startProcessTime" type="long"/>

        <property name="endProcessTime" column="endProcessTime" type="long"/>

        <property name="errorCount" column="errorCount" type="int"/>

        <property name="clientId" type="string">
            <column name="clientId" length="2000"/>
        </property>
    </class>
</hibernate-mapping>